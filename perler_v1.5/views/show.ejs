<% include partials/header %>

<div class="container">
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1><%= post.name %></h1>
            <img class="showImg" src="<%= post.image %>" alt = "<%= post.name %>">
        </div>
         <div class="col-md-6 offset-md-3">
            <a class="button linkButton" href = "/posts/<%= post._id %>/edit">Edit</a>
            <form id="delete" method="POST" action="/posts/<%= post._id %>/delete">
                <button class="button delButton">Delete</button>
            </form>
            <div class="clear"></div>
           
        </div>
        <div class="col-md-6 offset-md-3">
             <p><%= post.description %></p>
        </div>
    

    </div>
    
</div>

<% include partials/footer %>